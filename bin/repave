#!/usr/bin/env ruby
require_relative File.join(".","lib",  "repave", "task.rb")

Dir[File.join(".", "lib", "repave", "*.rb")].each do |task_file|
  require_relative task_file
end

module Repave

  TASKS =
    [
      SetSystemName,
      AppendToGitconfig,
      RcmConfig,
      Homebrew,
      QuicksilverYosemite,
      JetbrainsPrefs,
      SetMacOsDefaults,
    ]
end

Repave::TASKS.each do |task|
  task.new.run_task
end

system "source ~/.zshrc"
