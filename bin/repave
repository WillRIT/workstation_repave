#!/usr/bin/env ruby
require_relative File.join(__dir__, "..", "lib",  "repave", "task")

files = Dir.glob(File.join(__dir__, "..", "lib", "repave", "*.rb"))
files.each do |task_file|
  require_relative task_file
end

module Repave

  TASKS =
    [
      AppendToGitconfig,
      Homebrew,
      RcmConfig,
      QuicksilverYosemite,
      JetbrainsPrefs,
      SetMacOsDefaults,
    ]
end

Repave::TASKS.each do |task|
  task.new.run_task
end
